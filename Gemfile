    gem "jekyll"
    gem "jekyll-watch"
    gem "jekyll-paginate"
    gem "jekyll-sass-converter", "~> 2.0"
    gem "kramdown"
    gem "kramdown-parser-gfm"
    gem "rouge"
    gem "tzinfo"
    gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw]
    gem "webrick"
    gem "wdm", platforms: [:mingw, :mswin, :x64_mingw]

end
